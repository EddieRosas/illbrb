datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserAccount {
  id    String @id @default(cuid())
  firstName String
  lastName String

  userCredential UserCredential?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  loginProviders    LoginProvider[]
}

model UserCredential {
  id    String @id @default(cuid())

  email String
  passwordDigest String
  phoneNumber String

  user   UserAccount   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LoginProvider {
  id String @id @default(cuid())
  providerType String
  providerTypeData String
  user   UserAccount   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
